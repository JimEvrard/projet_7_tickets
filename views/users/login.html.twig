{% extends "./../main.html.twig" %}


{% block main %}

	<div class="container">

		<div class="row">

			<form class="col-md-6 mx-auto mt-5" method="post" action="{{action}}">

				<div class='mt-5'>
					<input type="text" class="form-control mb-3" placeholder="Mail" id="mail" name="mail" value="{{user.mail}}">
				</div>
				<div>
					<input type="password" class="form-control" id="mdp" placeholder="Mot de Passe" name="mdp" value="{{user.mdp}}">
				</div>


				<button type="submit" class="btn btn-dark mt-3">Submit</button>

			</form>
		</div>
	</div>

{% endblock %}
